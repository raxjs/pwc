{
  "workspaces": [
    "packages/*"
  ],
  "name": "pwc-project",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup": "npm run clean && pnpm install --reporter=append-only  --registry=https://registry.npmjs.org/",
    "clean": "rm -rf ./**/node_modules && npm run clean:result",
    "clean:result": "rm -rf ./packages/*/lib ./packages/*/es ./packages/*/esnext ./packages/*/dist",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "npm run lint -- --fix",
    "lint:diff": "esno ./scripts/lint-diff.ts",
    "test": "jest --forceExit --ci",
    "test:watch": "jest --watch",
    "start-bench-server": "ws -c lws.config.js --static.maxage 1 -d ./benchmarks",
    "benchmark": "esno ./scripts/benchmarks/index.ts",
    "start": "pnpm run start -r --filter \"./packages\"",
    "build": "pnpm run build -r --filter \"./packages\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint:diff"
    }
  },
  "dependencies": {
    "@applint/spec": "^1.2.0",
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-class-static-block": "^7.17.6",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^13.0.0",
    "@swc/core": "^1.2.146",
    "@swc/jest": "^0.2.20",
    "@types/eslint": "^7.28.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.19",
    "chalk": "^4.0.0",
    "esbuild": "^0.14.27",
    "eslint": "^7.0.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.1",
    "gzip-size": "^7.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "local-web-server": "^4.1.0",
    "prettier": "^2.6.0",
    "stylelint": "^14.0.0",
    "typescript": "^4.0.0"
  }
}
