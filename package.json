{
  "workspaces": [
    "packages/*"
  ],
  "name": "pwc-project",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup": "npm run clean && pnpm install --reporter=append-only",
    "clean": "rm -rf node_modules packages/*/lib packages/*/es",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "npm run lint -- --fix",
    "lint:diff": "esno ./scripts/lint-diff.ts",
    "test": "jest --forceExit --ci",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:diff"
    }
  },
  "dependencies": {
    "@appworks/spec": "^1.3.2",
    "@commitlint/cli": "^11.0.0",
    "@swc/core": "^1.2.146",
    "@swc/jest": "^0.2.20",
    "@types/eslint": "^7.28.0",
    "@types/node": "^17.0.19",
    "chalk": "^4.0.0",
    "eslint": "^7.0.0",
    "esno": "^0.14.1",
    "husky": "^4.1.0",
    "jest": "^27.0.0",
    "stylelint": "^13.0.0",
    "typescript": "^4.0.0",
    "@types/jest": "^27.4.1"
  }
}
